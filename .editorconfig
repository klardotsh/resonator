# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true

[*.{hs,sql,json,yml,yaml,toml,cabal}]
indent_size = 4
indent_style = space
max_line_length = 80

[*.{md,markdown}]
indent_style = space
max_line_length = 80

[Makefile]
tab_width = 4
indent_style = tab
